# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.js,*.vue]
max_line_length = 120

[Makefile]
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false

